.side-board
  .side-bar
    .side-bar__box
      %p.side-bar__box__username 
        = current_user.name       
      %ul.side-bar__box__icons
        %li.side-bar__box__icon-left
          = link_to new_group_path do
            =icon('fas', 'edit', )         
        %li.side-bar__box__icon-right
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')        
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          %p.group__group-name          
            = group.name
          %p.group__group-message
            = group.show_last_message
